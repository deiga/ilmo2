
<h2>Courses available</h2>
<p><%= link_to "All courses as PDF", courses_url(:format => :pdf) %></p>


<div id="courses">
	<ul id="courseListing">
	<% @courses.each do |course| -%>
		<li><%= link_to (h course.title), course %></li>
	<% end %>
	</ul>
	
</div>
<div id="chart">
	<%= @swf.insert_chart(:data_source => url_for(:controller => "/chart"), :width => "500", :height => "300") %> 
</div>
