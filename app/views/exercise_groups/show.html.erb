<h2 id="course_title"><%= @exercise_group.course_instance.course.title %></h2>
<%= "#{@exercise_group.course_instance.season} #{@exercise_group.course_instance.start.year}"%><br />
<%= "#{@exercise_group.weekday} #{@exercise_group.start} - #{@exercise_group.end}" %>

<p id="attendees">
	<% if @exercise_group.users_in_groups.any? %>
	<ul>
		<% @exercise_group.users_in_groups.each do |user| %>
   	<li><%= user.username %></li>
		<% end %>
	</ul>
	<% else %>
		No attendees.
	<% end %>
</p>

<%= link_to 'Back', course_instance_url(@exercise_group.course_instance) %> | <%= link_to 'Register to course', users_in_group_url, :method %>