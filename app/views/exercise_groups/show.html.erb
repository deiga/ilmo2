<h2 id="course_title"><%=h @exercise_group.course_instance.course.title %>
<%=h @exercise_group.course_instance.season %> <%=h @exercise_group.course_instance.start.year %></h2>
<h3><%=h "#{@exercise_group.weekday} #{@exercise_group.start} - #{@exercise_group.end}" %></h3>

<h4>Registered users:</h4>
<p id="attendees">
	<% if @exercise_group.users.any? %>
	<ul>
		<% @exercise_group.users.each do |user| %>
   	<li><%= user.username %></li>
		<% end %>
	</ul>
	<% else %>
		No attendees.
	<% end %>
</p>

<%= link_to 'Back', course_instance_url(@exercise_group.course_instance) %> | <%= link_to 'Register to this group', registrations_url(@exercise_group), {:method => :post} %>