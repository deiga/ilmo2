
<h2 id="course_title"><%= @course_instances.course.title %></h2>
<h3 id="instance"<%= "#{@course_instances.season} #{@course_instances.start.year}"%></h3>

<p id="instDescr">
	<%= @course_instances.description %>
</p>
<p id="groups">
	<% if @course_instances.exercise_groups.any? %>
	<ol>
		<% @course_instances.exercise_groups.each do |eg| %>
   	<li><%= link_to "#{eg.weekday} #{eg.start}-#{eg.end}", eg %></li>
		<% end %>
	</ol>
	<% else %>
		No exercise groups.
	<% end %>
</p>

<%= link_to 'Back', @course_instances.course %> | <%= link_to 'New Exercise group', new_course_instance_exercise_group_url(@course_instances) %>
