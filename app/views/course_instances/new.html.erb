
<h2 id="new_instance_-_">New instance - <%= @course.title %></h2>

<% form_for @course_instance do |f| %>
	<%= f.error_messages %>
<p>
	<strong><%= f.label :year, 'Year' %></strong><br />
	<%= f.text_field :year, :size => 15 %>
</p>
<p>
	<strong><%= f.label :season, 'Season' %></strong><br />
	Autumn
	<%= f.radio_button :season, 'Autumn' %><br />
	Summer
	<%= f.radio_button :season, 'Summer' %><br />
	Fall
	<%= f.radio_button :season, 'Fall' %><br />
</p>
<p>
	<%= f.label :description, 'Description:' %><br />
	<%= f.text_area :description %>
</p>
	<%= f.hidden_field :course_id, :value => @course.id %>
	<%= link_to 'Back', course_url( @course )%><%= f.submit 'Create' %>
<% end %>