
<h2 id="new_instance_-_">New instance - <%= @course.title %></h2>

<% form_for @course_instance do |f| %>
	<%= f.error_messages %>
<p>
	<%= f.label :title, 'Instance name:' %><br />
	<%= f.text_field :title, :size => 20 %>
</p>
<p>
	<%= f.label :description, 'Description:' %><br />
	<%= f.text_area :description %>
</p>
	<%= f.hidden_field :course_id, :value => @course.id %>
	<%= link_to 'Back', course_url( @course )%><%= f.submit 'Create' %>
<% end %>
