
<h2 id="new_instance">New instance - <%= @course.title %></h2>

<% form_for [@course, @course_instance] do |f| %>
	<%= f.error_messages %>

<p>
	<%= f.label :start, 'Starting date:'%>
	<%= select_date Date.today, :order => [:day, :month, :year], :prefix => :startdate %><br />
	<%= f.label :end, 'Ending date:'%>
	<%= select_date Date.today, :order => [:day, :month, :year], :prefix => :enddate %><br />
</p>
<p>
	<%= f.label :description, 'Description:' %><br />
	<%= f.text_area :description %>
</p>

	<%= f.submit 'Create' %>
<% end %>

<%= link_to 'Back', course_url( @course )%>